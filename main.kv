ScreenMan:
    Instructions:
    MainScreen:

<MainScreen>:
    name: "main"

    GridLayout:
        cols: 2
        rows: 1

        FloatLayout:

            canvas.before:
                Color:
                    rgba: 1, 1, 1, 1
                Rectangle:
                    pos: self.pos
                    size: self.size
            GridLayout:
                cols: 1
                rows: 2

                size_hint: (0.5, 0.1)
                pos_hint: {"right": 0.75, "top": 0.3}

                Label:
                    text: "Meeting link"
                    color: 0, 0, 0, 1

                TextInput:
                    id: link
                    text: ""
                    multiline: False

            GridLayout:
                cols: 1
                rows: 2

                size_hint: (0.5, 0.1)
                pos_hint: {"right": 0.75, "top": 0.9}

                Label:
                    text: "Meeting Time (HH:MM AM/PM)"
                    color: 0, 0, 0, 1

                TextInput:
                    id: time
                    text: ""
                    multiline: False

            GridLayout:
                cols: 1
                rows: 2

                size_hint: (0.5, 0.1)
                pos_hint: {"right": 0.75, "top": 0.6}

                Label:
                    text: "Day Of Meeting"
                    color: 0, 0, 0, 1

                TextInput:
                    id: day
                    text: ""
                    multiline: False

        GridLayout:
            rows: 3
            cols: 1

            canvas.before:
                Color:
                    rgba: 0,0,0,1
                Rectangle:
                    pos: self.pos
                    size: self.size

            Button:
                text: "Add Meeting"
                background_color: (2.7,2.7,2.7,1)
                color: 0, 0, 0, 1
                on_release: root.addMeeting()

            Button:
                text: "Finish"
                background_color: 2.7,2.7,2.7,1
                color: 0, 0, 0, 1
                on_release: root.finish()

            Button:
                text: "Meetings already in database"
                background_color: 2.7,2.7,2.7,1
                color: 0, 0, 0, 1
                on_release: root.finish()

<Instructions>:
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size

    GridLayout:
        cols: 1
        rows: 2

        Label:
            text:
                "Welcome to the automatic zoom joining app! Please enter your time in the format of HH:MM AM/PM. If you have already used this application on the computer you are on, you can just click the 'Meetings already in database' button. "
            color: 0,0,0,1
            text_size: self.size
            halign: 'center'
            valign: 'bottom'
            font_size: 40
        FloatLayout:
            Button:
                text: "Continue"
                color: 1,1,1,1
                background_color: 0,0,0,1
                size_hint: 0.2, 0.1
                pos_hint: {"right": 0.6, "top": 0.3}
                on_release:
                    app.root.current = "main"